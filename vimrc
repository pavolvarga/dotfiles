" Tab is equal to 4 spaces
set tabstop=4
set shiftwidth=4
set softtabstop=4

" Save 1000 items in history
set history=1000

" Use spaces instead of tabs
set expandtab

" Enable smart tab
set smarttab

" Highlight search match when typing it
set incsearch

" Show line numbes
set number

" Show cursor position
set ruler

" Show incomplete commands
set showcmd

" Backup edited file
set backup

" Do not wrap up in the middle of a word
set lbr

" Copy intendation from the current line
set ai

" Show 2 lines of context around cursor
set scrolloff=2

" Display completion matches on status line
set wildmenu

" Use unnamed register as clipboard (requires +clipboard - install vim-gnome)
set clipboard=unnamedplus
